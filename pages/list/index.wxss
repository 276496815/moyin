/**index.wxss**/
page{background:#303030;}
.song_list{padding-left:25rpx;}
.song_item{display:flex;flex-direction:row;align-items:center;padding-top:10rpx;padding-bottom:10rpx;border-bottom:1rpx solid rgba(255,255,255,0.1);}
.song_item:last-child{border-bottom:none;}
.song_item__album,
.sont_item__album_pic{position:relative;width:160rpx;height:160rpx;}
.song_item__album{margin-right:25rpx;}
.play_btn{position:absolute;top:50%;left:50%;width:100rpx;height:100rpx;margin-left:-50rpx;margin-top:-50rpx; z-index:5;border-radius:99rpx;background-color:#f2b536;opacity:0.8}
.play_btn::after{content:"";display:block;position:absolute;left:50%;top:50%;margin-left:-12rpx;margin-top:-22rpx; width:0;height:0;border-top:22rpx solid transparent;border-bottom:22rpx solid transparent;border-left:36rpx solid #fff;}

.song_item__con{display:flex;flex-direction:row;align-items:center;height:160rpx;flex-grow:1;padding-right:30rpx;}
.song_item__detail{display:flex;flex-direction:column;align-items:flex-start;flex-grow:1;padding-top:20rpx;height:100%;box-sizing:border-box;-webkit-box-sizing:border-box;}
.song_item__tit{font-size:32rpx;color:#fff;font-weight:500;}
.song_item__artist{font-size:24rpx;color:rgba(255,255,255,0.4);}
.mod_btn{display:block;border-radius:99rpx;width:280rpx;height:90rpx;line-height:90rpx;font-size:36rpx;color:#f2b536;border:1px solid;background:none;margin:0;}
.song_item__con .select_btn{width:160rpx;height:60rpx;line-height:60rpx;font-size:28rpx;}