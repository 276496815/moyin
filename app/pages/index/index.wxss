/**index.wxss**/
page{background:#303030;}
.page_make{padding-top:60rpx;}
.wrap{position:absolute;top:0;left:0;width:100%;height:100%;z-index:5; display:flex;flex-direction:column;justify-content:center;}
.main{flex-grow:1; display:flex;flex-direction:column;justify-content:center;}
.swipe_box{width:100%;margin-bottom:115rpx;}
.slide_image,
.song_intro,
.user_handle{display:block;width:600rpx;margin:0 auto;}
.slide_image{height:640rpx;}
.song_intro{position:relative;color:#fff;margin-bottom:55rpx;}
.song_intro__sp{padding-bottom:30rpx;border-bottom:1px solid rgba(255,255,255,.1);}
.song_title{font-size:56rpx;margin-bottom:15rpx;}
.song_player{font-size:32rpx;}
.play_btn{position:absolute;top:10rpx;right:10rpx;width:130rpx;height:130rpx;z-index:5;border-radius:99rpx;background-color:#f2b536;}
.play_btn::after{content:"";display:block;position:absolute;left:50%;top:50%;margin-left:-18rpx;margin-top:-30rpx; width:0;height:0;border-top:30rpx solid transparent;border-bottom:30rpx solid transparent;border-left: 50rpx solid #fff;}
.user_handle{display:flex;flex-direction:row;justify-content:space-between;margin-bottom:40rpx;}
.mod_btn{display:block;border-radius:99rpx;width:280rpx;height:90rpx;line-height:90rpx;font-size:36rpx;color:#f2b536;border:1px solid;background:none;margin:0;}

.change_handle{display:flex;flex-direction:row;justify-content:center;}

.disc {
  width: 620rpx;
  height: 620rpx;
  overflow: hidden;
  position: fixed;
  z-index: 10;
  bottom: -310rpx;
  left: 50%;
  border-radius: 50%;
  margin-left: -310rpx;
    border-radius: 50%;
}
.disc_cont{position:relative;}

.disc_action {
  border: none;
  background: none;
  color: #fff;
  text-align: center;
  font-size: 36rpx;
  padding-bottom: 70rpx;
  height: 200rpx;
  width: 200rpx;
  background-color: #000;
  position: fixed;
  left: 50%;
  margin-left: -100rpx;
  bottom: -100rpx;
  border-radius: 50%;
  cursor: pointer;
  z-index: 11;
}

.disc_action:hover,
.disc_action:active,
.disc_action:focus {
  color: #aa1010;
}

.disc_pie{
  position: absolute;
  /*font-size: 24rpx;*/
  width: 360rpx;
  height: 360rpx;
  transform-origin: 100% 100%;
  overflow: hidden;
  left: 50%;
  top: 50%;
  margin-top: -45rpx;
  margin-left: -360rpx;
}

.disc_pie__inner{
  display: block;
  height: 600rpx;
  width: 600rpx;
  position: absolute;
  bottom: -300rpx;
  right: -300rpx;
  border-radius: 50%;
  text-decoration: none;
  color: #fff;
  padding-top: 75rpx;
  text-align: center;
  transform: skew(-50deg) rotate(-70deg) scale(1);
  -webkit-backface-visibility: hidden;
}

.disc_pie__ic {
  display:inline-block; margin-top:80rpx;margin-left:-36rpx;
  width:30rpx;
  height:30rpx;
  background:#ff0099;
  opacity: 0.7;
}


.disc_pie:first-child {
  transform: rotate(-10deg) skew(50deg);
}

.disc_pie:nth-child(2) {
  transform: rotate(30deg) skew(50deg);
}

.disc_pie:nth-child(3) {
  transform: rotate(70deg) skew(50deg)
}

.disc_pie:nth-child(4) {
  transform: rotate(110deg) skew(50deg);
}

.disc_pie:nth-child(5) {
  transform: rotate(150deg) skew(50deg);
}

.disc_pie:nth-child(odd) .disc_pie__inner {
  background-color: #f2b536;
}

.disc_pie:nth-child(even) .disc_pie__inner {
  background-color: #f6c55e;
}

.disc_pie.active .disc_pie__inner {
  background-color: #fcda93;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

